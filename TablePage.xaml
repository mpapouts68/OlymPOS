<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OlymPOS.TablePage"
            
             
    BackgroundColor="#1f1f1f">

    <Grid Padding="2" VerticalOptions="Start">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Buttons Grid -->
        <Grid Grid.Row="0" ColumnSpacing="2" Padding="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Orders Button -->
            <StackLayout Grid.Column="0" BackgroundColor="Black" HorizontalOptions="Center" VerticalOptions="Center" Padding="2">
                <Image Source="order.png" HeightRequest="40" WidthRequest="200" HorizontalOptions="Center"/>
                <Label Text="Orders" TextColor="SteelBlue" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Button1_Clicked"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout Grid.Column="1" BackgroundColor="Black" HorizontalOptions="Center" VerticalOptions="Center"  Padding="2">
                <Image Source="exchange.png" HeightRequest="40" WidthRequest="200" HorizontalOptions="Center"/>
                <Label Text="Stats" TextColor="SteelBlue" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Button2_Clicked"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout Grid.Column="2" BackgroundColor="Black" HorizontalOptions="Center" VerticalOptions="Center" Padding="2">
                <Image Source="flower.png" HeightRequest="40" WidthRequest="200" HorizontalOptions="Center"/>
                <Label Text="Settings" TextColor="SteelBlue" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Button3_Clicked"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout Grid.Column="3" BackgroundColor="Black" HorizontalOptions="Center" VerticalOptions="Center"  Padding="2">
                <Image Source="power.png" HeightRequest="40" WidthRequest="200" HorizontalOptions="Center"/>
                <Label Text="Exit" TextColor="SteelBlue" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Button4_Clicked"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>
        </Grid>

        <!-- CollectionView for Servicing Points -->
        <StackLayout Grid.Row="1" Padding="2" VerticalOptions="Start" BackgroundColor="Black" Margin="0,2,0,0">
            <StackLayout x:Name="areaRadioButtonGroup" Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                <!-- Toggle buttons will be dynamically added here in code-behind -->
            </StackLayout>

            <CollectionView x:Name="servicingPointsCollectionView" ItemsSource="{Binding ServicingPoints}" VerticalScrollBarVisibility="Always" SelectionMode="Single" SelectionChanged="OnCollectionViewSelectionChanged">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="4" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="0" Margin="5">
                            <Image HeightRequest="50" WidthRequest="50">
                                <Image.Triggers>
                                    <DataTrigger TargetType="Image" Binding="{Binding Active}" Value="True">
                                        <Setter Property="Source" Value="red.png"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Image" Binding="{Binding Active}" Value="False">
                                        <Setter Property="Source" Value="green.png"/>
                                    </DataTrigger>
                                </Image.Triggers>
                            </Image>
                            <Label Text="{Binding FullDescription}"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"
                                   FontSize="14"
                                   TextColor="White"
                                   LineBreakMode="WordWrap"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </Grid>
</ContentPage>
