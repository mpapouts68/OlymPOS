<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:OlymPOS"
            x:Class="OlymPOS.OrderFlyOut">

    <FlyoutPage.Flyout>
        <!-- Assuming OrderPage is the flyout menu page -->
        <local:OrderPage Title="Categories"/>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:ItemsPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>
