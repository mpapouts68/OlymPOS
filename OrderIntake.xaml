            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            xmlns:local="clr-namespace:OlymPOS"
            android:TabbedPage.ToolbarPlacement="Bottom"
            x:Class="OlymPOS.OrderIntake"
            BackgroundColor="#1f1f1f">
    
    <NavigationPage Title="Orders" BackgroundColor="Black">
        <x:Arguments>
            <local:OrderPage Title="Categories" BackgroundColor="Black"/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Items">
        <x:Arguments>
            <local:ItemsPage Title="Items" />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Order">
        <x:Arguments>
            <local:Orders Title="Order" />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Four">
        <x:Arguments>
            <local:ExtrasOptionsPage Title="Four" />
        </x:Arguments>
    </NavigationPage>

</TabbedPage>
